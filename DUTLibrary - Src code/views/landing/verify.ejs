<%-include('partials/header.html')%>

<div class= "mb-4" style="background-color: #F5F5F5;">
    <div class="container">
        <div class="card-group" >

            <div class="card p-0 col-sm-3 border-0">
                <div class="card-group text-center">
                    <div class="card border-0">
                        <a href="/">   
                            <div class="card-body">Trang chủ</div>
                        </a>
                    </div>
                    <div class="card border-0">
                        <a href="/">   
                            <div class="card-body">Giới thiệu</div>
                        </a>
                    </div>
                    <div class="card border-0">
                        <a href="/">   
                            <div class="card-body">Liên hệ</div>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card p-0 border-0 col-sm-6"></div>
            
            <div class="card p-0 border-0 col-sm-3">
                <div class="card-group text-center">
                    <div class="card border-0"></div>
                    <div class="card border-0">
                        <a href="/signup">   
                            <div class="card-body">Đăng kí</div>
                        </a>
                    </div>
                    <div class="card border-0">
                        <a href="/login">   
                            <div class="card-body ">Đăng nhập</div>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
        
<div class="container">

    <div class="col-sm-7 mt-5" style="float: none; margin: auto;">
        <form method="post">
           
            <div class="col-sm-12">
                <div class="d-flex flex-row border rounded">                   
                    <i class="i fas fa-envelope fa-2x m-4" style="color: #1069a8;"></i>
                    <input type="text" class="form-control border shadow-none m-4" placeholder="Email" name="email">
                </div>
                <div class="d-flex flex-row border rounded mt-4">
                    <i class="fas fa-passport fa-2x m-4" style="color: #1069a8;"></i>
                    <input type="text" class="form-control border shadow-none m-4" placeholder="Token" name="token">
                </div>
                <div class="row">
                    <button type="submit" class= "btn mt-4 col-sm-4 text-white" style="float: none; margin: auto; background-color: #1069a8;">Xác thực tài khoản</button>
                </div> 
            </div>
            <% for(var i=0; i< error.length; i++){ %>
                <div class="row">
                    <div class="alert alert-danger col-sm-10 mt-4" style="float: none; margin: auto; text-align: center;" role="alert">
                        <%= error[i].message %> 
                    </div>
                </div>
            <%}%>
            <% for(var i=0; i< success.length; i++){ %>
                <div class="row">
                    <div class="alert alert-info col-sm-10 mt-4" style="float: none; margin: auto; text-align: center;" role="alert">
                        <%= success[i].message %> 
                    </div>
                </div>
            <%}%>
        </form>
    </div>
  
</div>

<div class="footer p-4 text-center text-white w-100" style="bottom: 0; position: absolute;">
    @TruongThiMaiHue_NguyenVanAnhQuan
</div>
</body>
</html>
